extends ../layout

block content
  style.
    :root {
      --hospital-blue: #0d8abc;
      --hospital-teal: #00c2cb;
      --hospital-light: #e8f4f8;
      --hospital-white: #ffffff;
      --hospital-gray: #f8f9fa;
      --hospital-dark: #2c3e50;
      --hospital-green: #2ecc71;
    }
    
    .hospital-header {
      background: linear-gradient(135deg, var(--hospital-blue), var(--hospital-teal));
      color: white;
      border-radius: 12px;
      padding: 1.5rem;
      margin-bottom: 2rem;
      box-shadow: 0 6px 15px rgba(13, 138, 188, 0.15);
      text-align: center;
    }
    
    .hospital-title {
      font-weight: 600;
      margin-bottom: 0.5rem;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
    }
    
    .hospital-title i {
      font-size: 1.8rem;
    }
    
    .hospital-form-container {
      background: white;
      border-radius: 12px;
      padding: 2rem;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
      border: 2px solid var(--hospital-teal) !important;
      max-width: 600px;
      width: 100%;
      margin: 0 auto;
    }
    
    .form-label {
      font-weight: 600;
      color: var(--hospital-dark);
      margin-bottom: 0.5rem;
    }
    
    .form-control, .form-select {
      border: 1px solid #dee2e6;
      border-radius: 8px;
      padding: 0.6rem 0.75rem;
      transition: all 0.3s ease;
    }
    
    .form-control:focus, .form-select:focus {
      border-color: var(--hospital-teal);
      box-shadow: 0 0 0 0.25rem rgba(0, 194, 203, 0.25);
    }
    
    .btn-hospital {
      background: linear-gradient(to right, var(--hospital-blue), var(--hospital-teal));
      color: white;
      border: none;
      border-radius: 8px;
      padding: 0.6rem 1.5rem;
      font-weight: 500;
      transition: all 0.3s ease;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
      box-shadow: 0 4px 8px rgba(13, 138, 188, 0.2);
    }
    
    .btn-hospital:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 12px rgba(13, 138, 188, 0.25);
      color: white;
    }
    
    .btn-secondary {
      background: #6c757d;
      color: white;
      border: none;
      border-radius: 8px;
      padding: 0.6rem 1.5rem;
      font-weight: 500;
      transition: all 0.3s ease;
    }
    
    .btn-secondary:hover {
      background: #5a6268;
      color: white;
      transform: translateY(-2px);
    }
    
    .button-group {
      display: flex;
      gap: 1rem;
      justify-content: center;
      margin-top: 2rem;
    }
    
    .form-section {
      margin-bottom: 1.5rem;
      padding-bottom: 1.5rem;
      border-bottom: 1px solid #eaeaea;
    }
    
    .form-section:last-child {
      border-bottom: none;
    }
    
    .form-section h5 {
      color: var(--hospital-blue);
      margin-bottom: 1rem;
      display: flex;
      align-items: center;
      gap: 8px;
    }
    
    .form-section h5 i {
      font-size: 1.2rem;
    }
    
    .form-hint {
      font-size: 0.85rem;
      color: #6c757d;
      margin-top: 0.25rem;
    }
    
    @media (max-width: 768px) {
      .hospital-form-container {
        padding: 1.5rem;
        margin: 0 1rem;
      }
      
      .button-group {
        flex-direction: column;
      }
      
      .button-group .btn {
        width: 100%;
      }
    }

  .hospital-header
    h1.hospital-title
      i.bi.bi-clipboard-plus
      | Nueva Internación
    p.mb-0 Complete los datos para registrar una nueva internación

  .hospital-form-container
    form(method="POST", action="/internaciones/nueva")
      
      // Sección: Datos del Paciente
      .form-section
        h5
          i.bi.bi-person-vcard
          | Datos del Paciente
        .mb-3
          label.form-label(for="pacienteSelect") Paciente
          select.form-select(name="paciente_id", required, id="pacienteSelect")
            option(value="" disabled selected) -- Seleccione un paciente --
            each paciente in pacientes
              option(value=paciente.id)= paciente.nombre + ' ' + paciente.apellido
      
      // Sección: Datos de la Habitación
      .form-section
        h5
          i.bi.bi-hospital
          | Datos de la Habitación
        .mb-3
          label.form-label(for="habitacionSelect") Habitación
          select.form-select(name="habitacion_id", required, id="habitacionSelect")
            option(value="" disabled selected) -- Seleccione una habitación --
            each habitacion in habitaciones
              option(value=habitacion.id)= 'N° ' + habitacion.numero
          .form-hint Se mostrarán solo habitaciones disponibles según el paciente seleccionado
      
      // Sección: Información de Ingreso
      .form-section
        h5
          i.bi.bi-calendar-check
          | Información de Ingreso
        .mb-3
          label.form-label(for="fecha_ingreso") Fecha de ingreso
          input.form-control(type="date", name="fecha_ingreso", id="fecha_ingreso", required)
        
        .mb-3
          label.form-label(for="tipo_ingreso") Tipo de ingreso
          select.form-select(name="tipo_ingreso", id="tipo_ingreso", required)
            option(value="" disabled selected) -- Seleccione el tipo de ingreso --
            option(value="Guardia") Guardia
            option(value="Derivación médica") Derivación médica
            option(value="Cita programada") Cita programada
            option(value="Ambulancia") Ambulancia
            option(value="Cirugía programada") Cirugía programada
            option(value="Otro") Otro
        
        .mb-3
          label.form-label(for="origen_paciente") Origen del paciente
          select.form-select(name="origen_paciente", id="origen_paciente", required)
            option(value="" disabled selected) -- Seleccione el origen --
            option(value="Domicilio") Domicilio
            option(value="Consultorio externo") Consultorio externo
            option(value="Otro hospital") Otro hospital / derivación
            option(value="SAME / Ambulancia") SAME / Ambulancia
            option(value="Otro") Otro
      
      // Sección: Información Médica
      .form-section
        h5
          i.bi.bi-clipboard2-pulse
          | Información Médica
        .mb-3
          label.form-label(for="motivo") Motivo de internación
          textarea.form-control(name="motivo", id="motivo", rows="3", required, placeholder="Describa el motivo principal de la internación...")
        
        .mb-3
          label.form-label(for="observaciones") Observaciones adicionales
          textarea.form-control(name="observaciones", id="observaciones", rows="3", placeholder="Observaciones relevantes para el equipo médico...")
          .form-hint Opcional - Puede incluir alergias, medicamentos, antecedentes importantes, etc.

      .button-group
        button.btn.btn-hospital(type="submit")
          i.bi.bi-file-earmark-medical
          | Registrar Internación
        a.btn.btn-secondary(href="/internaciones")
          i.bi.bi-x-circle
          | Cancelar

  // Script habitaciones dinámicas (sin cambios)
  script.
    // Añadir íconos si no están ya incluidos
    if (!document.querySelector('link[href*="bootstrap-icons"]')) {
      const link = document.createElement('link');
      link.rel = 'stylesheet';
      link.href = 'https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css';
      document.head.appendChild(link);
    }
    
    // Configurar fecha actual por defecto
    document.addEventListener('DOMContentLoaded', function() {
      const today = new Date().toISOString().split('T')[0];
      const fechaInput = document.getElementById('fecha_ingreso');
      if (fechaInput && !fechaInput.value) {
        fechaInput.value = today;
      }
    });
    
    // Script original para habitaciones dinámicas
    const pacienteSelect = document.getElementById('pacienteSelect');
    const habitacionSelect = document.getElementById('habitacionSelect');
    pacienteSelect.addEventListener('change', async function() {
      const id = this.value;
      if (!id) return;
      const res = await fetch(`/internaciones/habitaciones-disponibles/${id}`);
      const data = await res.json();
      habitacionSelect.innerHTML = '<option value="" disabled selected>-- Seleccione una habitación --</option>';
      data.forEach(h => {
        const opt = document.createElement('option');
        opt.value = h.id;
        opt.textContent = 'N° ' + h.numero;
        habitacionSelect.appendChild(opt);
      });
    });