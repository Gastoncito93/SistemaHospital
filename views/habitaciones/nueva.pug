extends ../layout

block content
  h2 Nueva Habitación

  form(method="POST", action="/habitaciones/nueva")
    .mb-3
      label.form-label Número
      input.form-control(type="number", name="numero", required)

    .mb-3
      label.form-label Ala
      select.form-select(name="ala", required)
        option(value="" disabled selected) -- Seleccione un ala --
        option(value="Norte") Norte
        option(value="Sur") Sur

    .mb-3
      label.form-label Tipo
      select.form-select(name="tipo", required)
        option(value="" disabled selected) -- Seleccione un tipo --
        option(value="individual") Individual
        option(value="doble") Doble

    .mb-3
      label.form-label Estado
      select.form-select(name="estado", required)
        option(value="" disabled selected) -- Seleccione un estado --
        option(value="libre") Libre
        option(value="ocupada") Ocupada
        option(value="limpieza") Limpieza

    button.btn.btn-success(type="submit") Guardar
    a.btn.btn-secondary.ms-2(href="/habitaciones") Cancelar
