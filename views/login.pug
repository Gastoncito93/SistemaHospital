extends layout

block content
  .row.justify-content-center
    .col-md-6
      h2.text-center.mb-4 Iniciar sesión
      form(method="POST", action="/login")
        .mb-3
          label.form-label Usuario
          input.form-control(type="text", name="usuario", required)
        .mb-3
          label.form-label Contraseña
          input.form-control(type="password", name="password", required)
        button.btn.btn-primary.w-100(type="submit") Ingresar
