extends layout

block content
  .container.mt-5
    .row.justify-content-center
      .col-md-6
        h1.text-center.mb-4 Iniciar Sesión
        if error
          .alert.alert-danger= error
        form(action="/login" method="POST")
          .mb-3
            label.form-label(for="email") Email
            input.form-control(type="email" name="email" id="email" required)
          .mb-3
            label.form-label(for="pass") Contraseña
            input.form-control(type="password" name="pass" id="pass" required)
          button.btn.btn-primary.w-100(type="submit") Entrar
        p.text-center.mt-3
          | ¿No tienes cuenta? 
          a(href="/registro") Regístrate
